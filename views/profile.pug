    body.container
        div.header(style=`background-image: url('http://localhost:8080/uploads/portrait/${profile.portrait}/${profile.id}'); repeat: no-repeat; background-size: cover;`)
            img(src=`/uploads/imageSrc/${profile.imageSrc}/${profile.UserId}`).avatar
            h1.username #{profile.lastname}
            input(type="hidden", name="id" id="idProf" value=`${profile.id}`)
        div.about#about
            p Nacimiento: #{profile.birth}
            p #{profile.likes}
        main(class="container mt-5")
            div(class="row")
                div(class="col-md-10 offset-md-1 " id="principal")
                    div(class="row mt-2" id="display-content")
                        div(class="col-md-10 offset-md-1" id="tabla")
 
            

